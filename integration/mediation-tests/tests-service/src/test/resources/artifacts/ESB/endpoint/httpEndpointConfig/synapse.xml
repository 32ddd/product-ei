<?xml version="1.0" encoding="UTF-8"?>
<definitions xmlns="http://ws.apache.org/ns/synapse">
    <registry provider="org.wso2.carbon.mediation.registry.WSO2Registry">
        <parameter name="cachableDuration">15000</parameter>
    </registry>
    <api xmlns="http://ws.apache.org/ns/synapse" name="CustomerServiceAPI" context="/customerService">
        <resource methods="POST" url-mapping="/customer">
            <inSequence>
                <property name="uri.var.port" value="8480"/>
                <property name="uri.var.servicePath" value="customers"/>
                <log level="custom">
                    <property name="Creating new customer..." value="true"/>
                </log>
                <send>
                    <endpoint name="AddCustomerEP">
                        <http method="POST" uri-template="http://localhost:{uri.var.port}/{uri.var.servicePath}"/>
                    </endpoint>
                </send>
            </inSequence>
        </resource>
        <resource methods="GET" uri-template="/customer/{id}">
            <inSequence>
                <property name="uri.var.port" value="8480"/>
                <property name="uri.var.servicePath" value="customers"/>
                <log level="custom">
                    <property name="Get customer for given customer Id...." value="true"/>
                </log>
                <send>
                    <endpoint name="GetCustomerEP">
                        <http method="GET" uri-template="http://localhost:{uri.var.port}/{uri.var.servicePath}/{uri.var.id}"/>
                    </endpoint>
                </send>
            </inSequence>
        </resource>
        <resource methods="DELETE" uri-template="/customer/{id}">
            <inSequence>
                <property name="uri.var.port" value="8480"/>
                <property name="uri.var.servicePath" value="customers"/>
                <log level="custom">
                    <property name="Remove customer for given customer Id..." value="true"/>
                </log>
                <send>
                    <endpoint name="DeleteCustomerEP">
                        <http method="DELETE" uri-template="http://localhost:{uri.var.port}/{uri.var.servicePath}/{uri.var.id}"/>
                    </endpoint>
                </send>
            </inSequence>
        </resource>
        <resource methods="PUT" url-mapping="/customer">
            <inSequence>
                <property name="uri.var.port" value="8480"/>
                <property name="uri.var.servicePath" value="customers"/>
                <log level="custom">
                    <property name="Update customer name for customer Id..." value="true"/>
                </log>
                <send>
                    <endpoint name="UpdateCustomerEP">
                        <http method="PUT" uri-template="http://localhost:{uri.var.port}/{uri.var.servicePath}"/>
                    </endpoint>
                </send>
            </inSequence>
        </resource>
    </api>

    <api xmlns="http://ws.apache.org/ns/synapse" name="CustomerBackendAPI" context="/customers">
        <resource methods="POST PUT" uri-template="/">
            <inSequence>
                <filter xmlns:m0="http://services.samples" xpath="//createCustomer">
                    <payloadFactory media-type="xml">
                        <format>
                            <createCustomerResponse>
                                <id>$1</id>
                                <name>$2</name>
                            </createCustomerResponse>
                        </format>
                        <args>
                            <arg evaluator="xml" expression="//createCustomer/id"/>
                            <arg evaluator="xml" expression="//createCustomer/name"/>
                        </args>
                    </payloadFactory>
                    <respond/>
                </filter>
            </inSequence>
        </resource>
        <resource methods="GET" uri-template="/{id}">
            <inSequence>
                <property name="customerId" expression="get-property('uri.var.id')"/>
                <filter source="$ctx:customerId" regex="8fa3fc1b-f63c-4b21-8aff-3ac684c74d97">
                    <payloadFactory media-type="xml">
                        <format>
                            <getCustomerResponse>
                                <id>$1</id>
                                <name>John</name>
                            </getCustomerResponse>
                        </format>
                        <args>
                            <arg evaluator="xml" expression="get-property('uri.var.id')"/>
                        </args>
                    </payloadFactory>
                    <respond/>
                </filter>
            </inSequence>
        </resource>
        <resource methods="DELETE" uri-template="/{id}">
            <inSequence>
                <property name="customerId" expression="get-property('uri.var.id')"/>
                <filter source="$ctx:customerId" regex="8fa3fc1b-f63c-4b21-8aff-3ac684c74d97">
                    <payloadFactory media-type="xml">
                        <format>
                            <deleteCustomerResponse>
                                <return/>
                            </deleteCustomerResponse>
                        </format>
                        <args/>
                    </payloadFactory>
                    <respond/>
                </filter>
            </inSequence>
        </resource>
    </api>

    <proxy name="HttpEndPointProxy"
           transports="https http"
           startOnLoad="true"
           trace="disable">
        <description/>
        <target>
            <inSequence>
                <property name="uri.var.port" value="9000"/>
                <property name="uri.var.servicePath" value="services"/>
                <property name="uri.var.serviceName" value="SimpleStockQuoteService"/>
                <send>
                    <endpoint key="HTTPEndpointEP"/>
                </send>
            </inSequence>
            <outSequence>
                <log level="full"/>
                <send/>
            </outSequence>
        </target>
    </proxy>

    <proxy name="MissingVariableEndPointProxy"
           transports="https http"
           startOnLoad="true"
           trace="disable">
        <description/>
        <target>
            <inSequence>
                <property name="uri.var.port" value="9000"/>
                <property name="uri.var.serviceName" value="SimpleStockQuoteService"/>
                <property name="uri.var.serviceName" value="SimpleStockQuoteService"/>
                <send>
                    <endpoint key="HTTPEndpointEP"/>
                </send>
            </inSequence>
            <outSequence>
                <log level="full"/>
                <send/>
            </outSequence>
        </target>
    </proxy>

    <proxy name="InvalidHttpEndPointProxy"
           transports="http https"
           startOnLoad="true">
        <target>
            <inSequence>
                <send>
                    <endpoint key="InvalidEndpointEP"/>
                </send>
            </inSequence>
            <outSequence>
                <send/>
            </outSequence>
        </target>
    </proxy>


    <endpoint name="HTTPEndpointEP">
        <http method="POST"
              uri-template="http://localhost:{uri.var.port}/{uri.var.servicePath}/{uri.var.serviceName}"/>
    </endpoint>

    <endpoint name="InvalidEndpointEP">
        <http method="POST"
              uri-template="http://localhost:9010/services/SimpleStockQuoteService"/>
    </endpoint>

    <sequence name="fault">
        <log level="full">
            <property name="MESSAGE" value="Executing default 'fault' sequence"/>
            <property name="ERROR_CODE" expression="get-property('ERROR_CODE')"/>
            <property name="ERROR_MESSAGE" expression="get-property('ERROR_MESSAGE')"/>
        </log>
        <drop/>
    </sequence>
    <sequence name="main">
        <in>
            <log level="full"/>
        </in>
        <out>
            <log level="full"/>
            <send/>
        </out>
        <description>The main sequence for the message mediation</description>
    </sequence>
</definitions>